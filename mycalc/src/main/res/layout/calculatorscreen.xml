<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_calcScreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_floating_material_dark">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/textView"
        android:background="@color/background_floating_material_dark"
        android:clickable="false"
        android:textColor="#ffffff"
        android:gravity="right"
        android:textSize="30dp"
        android:text=""
        android:layout_weight="3"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation= "horizontal"
        android:layout_weight="4">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="C"
            android:id="@+id/btnclear"
            android:textColor="#bd0c0c"
            android:textSize="@dimen/abc_action_bar_progress_bar_size"
            android:background="@color/dim_foreground_material_light"
            android:layout_margin="5dp" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/clean"
            android:id="@+id/btnDel"
            android:textColor="#bd0c0c"
            android:textSize="@dimen/abc_action_bar_progress_bar_size"
            android:background="@color/dim_foreground_material_light"
            android:layout_margin="5dp" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="/"
            android:id="@+id/btnDivision"
            android:background="@color/dim_foreground_material_light"
            android:textSize="@dimen/abc_action_bar_progress_bar_size"
            android:textColor="#ffffff"
            android:layout_margin="5dp"
            android:nestedScrollingEnabled="false"
            android:allowUndo="false"
            android:clickable="false" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/dim_foreground_material_light"
            android:textSize="@dimen/abc_action_bar_progress_bar_size"
            android:textColor="#ffffff"
            android:layout_margin="5dp"
            android:text="@string/root"
            android:id="@+id/btnRoot"/>

    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2">
        <TableRow>
            <Button
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="1"
                android:id="@+id/btn1"
                android:background="@color/primary_dark_material_light"
                android:textSize="@dimen/abc_action_bar_progress_bar_size"
                android:textColor="#ffffff"
                android:layout_margin="5dp" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="2"
                android:id="@+id/btn2"
                android:background="@color/primary_dark_material_light"
                android:textSize="@dimen/abc_action_bar_progress_bar_size"
                android:textColor="#ffffff"
                android:layout_margin="5dp" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="3"
                android:id="@+id/btn3"
                android:background="@color/primary_dark_material_light"
                android:textSize="@dimen/abc_action_bar_progress_bar_size"
                android:textColor="#ffffff"
                android:layout_margin="5dp" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="*"
                android:id="@+id/btnMultiply"
                android:background="@color/dim_foreground_material_light"
                android:textSize="@dimen/abc_action_bar_progress_bar_size"
                android:textColor="#ffffff"
                android:layout_margin="5dp" />
        </TableRow>
        <TableRow>
            <Button
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="4"
                android:id="@+id/btn4"
                android:background="@color/primary_dark_material_light"
                android:textSize="@dimen/abc_action_bar_progress_bar_size"
                android:textColor="#ffffff"
                android:layout_margin="5dp" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="5"
                android:id="@+id/btn5"
                android:background="@color/primary_dark_material_light"
                android:textSize="@dimen/abc_action_bar_progress_bar_size"
                android:textColor="#ffffff"
                android:layout_margin="5dp" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="6"
                android:id="@+id/btn6"
                android:background="@color/primary_dark_material_light"
                android:textSize="@dimen/abc_action_bar_progress_bar_size"
                android:textColor="#ffffff"
                android:layout_margin="5dp" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="-"
                android:id="@+id/btnMinus"
                android:background="@color/dim_foreground_material_light"
                android:textSize="@dimen/abc_action_bar_progress_bar_size"
                android:textColor="#ffffff"
                android:layout_margin="5dp" />
        </TableRow>
        <TableRow>
            <Button
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="7"
                android:id="@+id/btn7"
                android:background="@color/primary_dark_material_light"
                android:textSize="@dimen/abc_action_bar_progress_bar_size"
                android:textColor="#ffffff"
                android:layout_margin="5dp" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="8"
                android:id="@+id/btn8"
                android:background="@color/primary_dark_material_light"
                android:textSize="@dimen/abc_action_bar_progress_bar_size"
                android:textColor="#ffffff"
                android:layout_margin="5dp" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="9"
                android:id="@+id/btn9"
                android:background="@color/primary_dark_material_light"
                android:textSize="@dimen/abc_action_bar_progress_bar_size"
                android:textColor="#ffffff"
                android:layout_margin="5dp" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="+"
                android:id="@+id/btnPlus"
                android:background="@color/dim_foreground_material_light"
                android:textSize="@dimen/abc_action_bar_progress_bar_size"
                android:textColor="#ffffff"
                android:layout_margin="5dp" />
        </TableRow>
        <TableRow>
            <Button
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="."
                android:id="@+id/btnTChK"
                android:background="@color/primary_dark_material_light"
                android:textSize="@dimen/abc_action_bar_progress_bar_size"
                android:textColor="#ffffff"
                android:layout_margin="5dp" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="0"
                android:id="@+id/btn0"
                android:background="@color/primary_dark_material_light"
                android:textSize="@dimen/abc_action_bar_progress_bar_size"
                android:textColor="#ffffff"
                android:layout_margin="5dp" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="00"
                android:id="@+id/btn00"
                android:background="@color/primary_dark_material_light"
                android:textSize="@dimen/abc_action_bar_progress_bar_size"
                android:textColor="#ffffff"
                android:layout_margin="5dp" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="="
                android:id="@+id/btnEqually"
                android:background="@color/dim_foreground_material_light"
                android:textSize="@dimen/abc_action_bar_progress_bar_size"
                android:textColor="#ffffff"
                android:layout_margin="5dp" />
        </TableRow>
    </TableLayout>

</LinearLayout>